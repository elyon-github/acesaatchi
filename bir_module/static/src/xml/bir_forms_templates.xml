<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="bir_module.form_2307_page" owl="1">
        <div class="col-md-12" t-ref="root">
            <h2 style="color:#8f8f8f; padding-top:10px">BIR Form 2307</h2>
            <div class="row">
                <div class="col-md-2">
                    <div class="row">
                        <div class="col-md-3">
                            <input type="button" 
                                   id="print_2307" 
                                   value="Print" 
                                   class="btn btn-success"
                                   t-on-click="onPrint2307"/>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <input type="month" 
                           id="month_2307" 
                           class="month_2307"
                           t-att-value="state.currentMonth"
                           t-on-keypress="onMonthKeypress"/>
                </div>
                <div class="col-md-1 form-group">
                    <select class="form-control select_dropdown" 
                            id="partner_2307"
                            t-on-change="onPartnerChange">
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-5">
                    <div id="ammend_table_2307"/>
                </div>
                <div class="col-md-7">
                    <iframe id="preview_2307" style="height:700px" width="100%"></iframe>
                </div>
            </div>
        </div>
    </t>

