<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="bir_module.form_2307_page" owl="1">
        <div class="col-md-12 bir-page-container" t-ref="root">
            <div class="bir-header">
                <h2 class="bir-title">BIR Form 2307</h2>
            </div>
            
            <div class="bir-controls-section">
                <div class="bir-controls-row">
                    <div class="bir-control-group">
                        <label for="month_2307" class="bir-control-label">Taxable Month/Year</label>
                        <input type="date" 
                               id="month_2307" 
                               class="month_2307 bir-form-control"
                               t-att-value="state.currentMonth + '-01'"
                               t-on-change="onMonthChange"
                               placeholder="Select month"/>
                    </div>
                    
                    <div class="bir-control-group bir-partner-search-wrapper">
                        <label for="partner_2307" class="bir-control-label">Partner</label>
                        <div class="bir-partner-input-container">
                            <input type="text" 
                                   id="partner_2307" 
                                   class="bir-form-control bir-partner-search-input"
                                   placeholder="Search partner by name or ID"
                                   t-on-input="onPartnerSearch"
                                   autocomplete="off"/>
                            <div id="partner_2307_dropdown" class="bir-partner-dropdown"></div>
                        </div>
                        <input type="hidden" id="partner_2307_id" class="partner-id-field"/>
                    </div>
                    
                    <div class="bir-control-group">
                        <button type="button" 
                                id="print_2307" 
                                class="btn btn-primary bir-btn-print"
                                t-on-click="onPrint2307">
                            <i class="fa fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="bir-content-section">
                <div class="bir-data-table">
                    <div id="ammend_table_2307"/>
                </div>
                <div class="bir-preview-panel">
                    <iframe id="preview_2307" class="bir-preview-iframe"></iframe>
                </div>
            </div>
        </div>
    </t>

