    <t t-name="bir_module.sawt_report" owl="1">
        <div class="col-md-12" t-ref="root">
            <h2 style="color:#8f8f8f; padding-top:10px">Summary Alphalist of Withholding Tax</h2>
            <div class="row">
                <div class="col-md-2">
                    <input type="button" 
                           id="export_sawt" 
                           value="Export xlsx" 
                           class="btn btn-success"
                           t-on-click="onExportSawt"/>
                    <input type="button" 
                           id="export_sawt_csv" 
                           value="Export csv" 
