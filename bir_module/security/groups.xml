<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- BIR Module User Group for accessing BIR Forms and 2307 Reports -->
        <record id="group_bir_user" model="res.groups">
            <field name="name">BIR Module User</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">User can access BIR module, BIR forms, and BIR 2307 reports</field>
            <field name="users" eval="[]"/>
        </record>

        <!-- BIR Administrator Group for full access including configurations -->
        <record id="group_bir_admin" model="res.groups">
            <field name="name">BIR Administrator</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">Administrator can access BIR module, configurations, forms, and all 2307 reports</field>
            <field name="users" eval="[(4, 2)]"/>
        </record>
    </data>
</odoo>
