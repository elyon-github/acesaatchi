<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit account.move.line list view to add custom controller -->
    <record id="view_accrued_revenue_journal_items_list_inherit" model="ir.ui.view">
        <field name="name">account.move.line.list.accrued.revenue.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="saatchi_customized_accrued_revenue.view_accrued_revenue_journal_items_list"/>
        <field name="arch" type="xml">
            <list position="attributes">
                <attribute name="js_class">accrued_revenue_list_view</attribute>
            </list>
        </field>
    </record>

    <record id="view_sale_order_list_inherit" model="ir.ui.view">
        <field name="name">sale.order.list.revenue.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="attributes">
                <attribute name="js_class">sales_order_revenue_list_view</attribute>
                
            </xpath>
        </field>
    </record>
</odoo>