<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Record Rule: Users can only see their company's accrual config -->
        <record id="saatchi_accrual_config_company_rule" model="ir.rule">
            <field name="name">Accrual Config - Company Rule</field>
            <field name="model_id" ref="model_saatchi_accrual_config"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">1</field>
        </record>

    </data>
</odoo>
