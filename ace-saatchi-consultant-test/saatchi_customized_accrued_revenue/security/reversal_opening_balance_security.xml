<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security access rules for Reversal Opening Balance model -->
        <!-- This is in XML instead of CSV to ensure it loads after the model is registered -->
        
        <record id="access_saatchi_reversal_ob_manager" model="ir.model.access">
            <field name="name">access.saatchi.reversal_ob.manager</field>
            <field name="model_id" ref="model_saatchi_accrued_revenue_reversal_opening_balance"/>
            <field name="group_id" ref="account.group_account_manager"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
        <record id="access_saatchi_reversal_ob_user" model="ir.model.access">
            <field name="name">access.saatchi.reversal_ob.user</field>
            <field name="model_id" ref="model_saatchi_accrued_revenue_reversal_opening_balance"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
