<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="app_res_company_form" model="ir.ui.view">
        <field name="name">app.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="before">
                <group name="app_biz" string="Business Config">
                </group>
            </xpath>
<!--            独立业务配置group-->
            <xpath expr="//group[@name='app_biz']" position="inside">
                <field name="currency_id" position="move"/>
            </xpath>
        </field>
    </record>
</odoo>
