<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pdf_export_main_customer_report" inherit_id="account_reports.pdf_export_main_customer_report" priority="100">
        <!-- Update the repeating header to use customer report templates -->
        <xpath expr="//thead[@class='o_repeating_header']//div[@class='row']" position="replace">
            <div class="row">
                <div class="col-8">
                    <!-- All company information (name, address, vat, ...) -->
                    <t t-call="account_reports.company_information_customer_report"/>
                </div>
                <div class="col-4">
                    <!-- All tax and bank information -->
                    <t t-call="account_reports.tax_information_customer_report"/>
                    <t t-call="account_reports.bank_information_customer_report"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>

